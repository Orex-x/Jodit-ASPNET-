@model Jodit.ViewModels.MissionModel 
 
<h2>Add mission</h2>
 

<form asp-action="CreateMission" asp-controller="Mission">
    <div>
        <label asp-for="Mission">Title</label><br />
        <input type="text" asp-for="Mission.Title" />
    </div>
    
    <div>
        <label asp-for="Mission">Description</label><br />
        <input type="text" asp-for="Mission.Description" />
    </div>
    
    <div>
        <label asp-for="Mission">Deadline</label><br />
        <input type="date" asp-for="Mission.Deadline" />
    </div>
    
   
    
    @{
        <ul>
            @for (var i = 0; i < Model.ChooseUsers.Count(); i++)
            {
                
                <li>       
                    <label asp-for="@Model.ChooseUsers[i].Checkbox.Value">@Model.ChooseUsers[i].User.Email</label>
                    <input type="checkbox" asp-for="@Model.ChooseUsers[i].Checkbox.Value"  />
                    <input type="hidden" asp-for="@Model.ChooseUsers[i].User.IdUser" />
                </li>
                
            }
        </ul>
    }
    
    <input type="hidden" asp-for="@Model.Group.IdGroup" />
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default">
    </div>
</form>