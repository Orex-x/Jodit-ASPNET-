@model Jodit.ViewModels.AccountModel
 

@{
    ViewData["Title"] = "Account";
}

<h2>@Model.user.FirstName @Model.user.SecondName @Model.user.LastName </h2>
<a asp-action="createGroup" asp-controller="Group">Add group</a><br>
<a asp-action="GroupInvitations" asp-controller="Account">My invitations</a><br>
<a asp-action="ListMissions" asp-controller="Mission">My missions</a>



   
@foreach(var userGroup in Model.user.UserGroups)
{
        
    <div>
        <a asp-action="Details" asp-controller="Group" asp-route-id="@userGroup.Group.IdGroup"><h5>@userGroup.Group.GroupName</h5></a>
    </div>
}



<form asp-action="Logout" asp-controller="Account" asp-anti-forgery="true">
    <div>
        <input type="submit" value="Выйти" />
    </div>
</form>