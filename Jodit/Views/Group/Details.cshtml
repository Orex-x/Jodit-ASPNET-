@model Jodit.ViewModels.GroupDetailsModel

@{
    ViewData["Title"] = "Details";
}
<h1>@Model.UserGroup.Group.GroupName</h1>


<br><a asp-action="ListUsers" asp-route-id="@Model.UserGroup.Group.IdGroup" asp-controller="User">Users list</a><br>


<br>
@{
    if (Model.UserGroup.IsAdmin)
    {
        <a asp-action="CreateMission" asp-route-id="@Model.UserGroup.Group.IdGroup" asp-controller="Mission">Create task</a><br>
    }
}

<br>
@{
    if (Model.UserGroup.IsAdmin)
    {
        <a asp-action="InviteUser" asp-controller="User" asp-route-id="@Model.UserGroup.Group.IdGroup">Invite user</a><br>
    }
}

<a asp-action="CreateStatement" asp-route-id="@Model.UserGroup.Group.IdGroup" asp-controller="Group">will change</a><br>

<a asp-action="ListScheduleStatement" asp-route-id="@Model.UserGroup.Group.IdGroup" asp-controller="Group">list change</a><br>

<form>
    <div>
        <label for="date">Enter date:</label>
        <input type="date" id="date" name="date">
    </div>
    <div>
        <input type="submit">
    </div>
</form>
<br>
<h6>@ViewData["ResultCalculateByDate"]</h6>

<br><br><h3>Дежурства на 30 дней вперед</h3>
@{
    Dictionary<DateTime, User> list = Model.UserGroup.Group.CalculateToDate(DateTime.Now.Date.AddDays(30));
    foreach (var item in list)
    {
        var a = Model.ScheduleChanges.FirstOrDefault(x => x.AfterUserDate == item.Key);
        var b = Model.ScheduleChanges.FirstOrDefault(x => x.BeforeUserDate == item.Key);
        
        if (a != null)
        {
            <h6>
                Date: @item.Key.ToShortDateString()
                user: @a.BeforeUser.FirstName @a.BeforeUser.SecondName
            </h6>
        }
        else if (b != null)
        {
            <h6>
                Date: @item.Key.ToShortDateString()
                user: @b.AfterUser.FirstName @b.AfterUser.SecondName
            </h6>
        }
        else
        {
            <h6>Date: @item.Key.ToShortDateString() user: @item.Value.FirstName  @item.Value.SecondName</h6>
        }
    }
}
