@model Jodit.Models.Group

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit" asp-controller="group" asp-route-id="@Model.IdGroup">
    <input type="hidden" asp-for="IdGroup" />
    <div class="form-group">
        <input type="text"
               asp-for="GroupName"
               class="form-control"
               placeholder="Group name" />
    </div>

    <div class="form-group">
        <input type="text"
               asp-for="Description"
               class="form-control"
               placeholder="Description" />
    </div>

    <div class="form-group">
           <input type="checkbox" 
                  asp-for="IsPrivate"
                  class="form-control"
                  placeholder="Is private" /> 
       </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default">
    </div>
</form>
