@model Jodit.Models.Group 

@{
    ViewBag.Title = "Add user";
}

<form asp-action="createGroup" asp-controller="Group">
    <div class="form-group">
        <input type="text" 
               asp-for="GroupName"
               class="form-control"
               placeholder="Group name" /> 
    </div>

    <div class="form-group">
        <input type="text" 
               asp-for="Description"
               class="form-control"
               placeholder="description" /> 
    </div>

    <div class="form-group">
        <input type="checkbox" 
               asp-for="IsPrivate"
               class="form-control"
               placeholder="Is private" /> 
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default">
    </div>
</form>